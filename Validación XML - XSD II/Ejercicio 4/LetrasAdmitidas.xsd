<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Definición del elemento "letras" -->
  <xs:element name="letras">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <!-- Patrón para uno o más pares de letras (mayúscula + minúscula) -->
        <xs:pattern value="([A-Z][a-z])+" />
      </xs:restriction>
    </xs:simpleType>
  </xs:element>

</xs:schema>